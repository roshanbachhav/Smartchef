<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/errorToast"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center|top"
    android:layout_marginHorizontal="24dp"
    android:layout_marginTop="20dp"
    android:background="@drawable/bg_custom_toast"
    android:elevation="8dp"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="12dp">


    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/successGif"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:scaleType="centerCrop"
        android:clipToOutline="true"
        android:outlineProvider="background"
        android:src="@drawable/successfully_done" />

    <TextView
        android:id="@+id/toastText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/green"
        android:fontFamily="@font/bricolage_semibold"
        android:textSize="14sp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="12dp"
        android:text="@string/toast_message"
        android:gravity="center"/>
</LinearLayout>
